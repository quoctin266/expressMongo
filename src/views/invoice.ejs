<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body
    style="
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
        'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji',
        'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    "
  >
    <table
      style="
        max-width: 80rem;
        min-height: 100vh;
        padding: 2rem;
        margin: 0 auto;
        background-color: #f5f5f5;
      "
    >
      <tr>
        <td align="center">
          <table
            style="background-color: white; border-radius: 5px; padding: 20px"
          >
            <tr>
              <td>
                <div style="text-align: left; font-size: 20px">Cursus</div>
              </td>
              <td>
                <div style="text-align: right; font-size: 20px">Invoice</div>
              </td>
            </tr>
            <tr>
              <td
                colspan="2"
                style="
                  margin: 15px 0;
                  border-top: 1px solid rgba(5, 5, 5, 0.06);
                "
              ></td>
            </tr>
            <tr>
              <td colspan="2" style="padding: 10px 0">
                <div style="text-align: left">
                  <div style="font-size: 16px">Hi <%= name %>,</div>
                  <div style="font-size: 16px">
                    You have purchased courses from Cursus!
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <td
                colspan="2"
                style="
                  margin: 15px 0;
                  border-top: 1px dashed rgba(5, 5, 5, 0.06);
                "
              ></td>
            </tr>
            <tr>
              <td colspan="2">
                <table style="width: 100%">
                  <% for(let i=0; i < courses.length; i++) { %>
                  <tr>
                    <td>
                      <tr>
                        <td style="font-size: 14px; color: #15c">
                          <%= courses[i].title %>
                        </td>
                        <td style="font-size: 14px">
                          <%= courses[i].price %> $
                        </td>
                      </tr>
                      <tr>
                        <span style="font-size: 14px"
                          ><%= courses[i].body %></span
                        >
                      </tr>
                      <tr>
                        <td colspan="2">
                          <div
                            style="
                              margin: 15px 0;
                              border-top: 1px dashed rgba(5, 5, 5, 0.06);
                            "
                          ></div>
                        </td>
                      </tr>
                    </td>
                  </tr>
                  <% } %>
                </table>
              </td>
            </tr>
            <tr>
              <td colspan="2" style="text-align: right">
                <div>
                  <span style="font-size: 14px"
                    >Total: <%= totalPrice %> $</span
                  >
                </div>
                <div
                  style="
                    margin: 15px 0;
                    border-top: 1px dashed rgba(5, 5, 5, 0.06);
                  "
                ></div>
              </td>
            </tr>
            <tr>
              <td colspan="2" style="text-align: center">
                <a
                  href="<%= homeUrl %>"
                  target="_blank"
                  style="
                    display: inline-block;
                    width: 100%;
                    height: 40px;
                    line-height: 40px;
                    cursor: pointer;
                    border-radius: 5px;
                    background-color: #ea1e30;
                    color: white;
                    border: none;
                    outline: none;
                    text-decoration: none;
                    font-size: 16px;
                  "
                >
                  Find more courses at Cursus
                </a>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <div
                  style="padding-top: 20px; text-align: left; font-size: 16px"
                >
                  Cheers,
                </div>
                <div style="text-align: left; font-size: 16px">Cursus.</div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
